generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id            String   @id @default(uuid())
    tasks         Task[]
    semesterStart DateTime
    semesterEnd   DateTime
    created       DateTime @default(now())
}

/////////////////////////////////////// Occurrence

// TODOIST API
// https://developer.todoist.com/rest/v1/#tasks
model Task {
    id        String   @id @default(uuid())
    title     String
    created   DateTime @default(now())
    updated   DateTime @updatedAt
    // completed  Int      @default(0)
    completed Boolean  @default(false) // TODO: test prisma boolean conversion to SQLite Integer
    order     Int      @default(0) // for user sorting that probably wonâ€™t be implemented
    User      User?    @relation(fields: [userId], references: [id])
    userId    String?
}

model CalendarEvent {
    id      String   @id @default(uuid())
    title   String
    time    String
    created DateTime @default(now())
    updated DateTime @updatedAt
}

model WeeklyCalendarEvent {
    id        String   @id @default(uuid())
    title     String
    created   DateTime @default(now())
    updated   DateTime @updatedAt
    // 24 hour time
    startTime String // number of minutes past midnight
    endTime   String // number of minutes past midnight
    weekdays  String // weekday
    note      String // (BEN 009)
}
